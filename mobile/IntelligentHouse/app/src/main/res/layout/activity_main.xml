<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/main_activity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="420dp"
        android:id="@+id/lst_songlist"
        android:paddingBottom="0dp"
        style="@style/TextAppearance.AppCompat.Display3"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="New Song"
        android:id="@+id/btn_song"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="addSong" />

    <Button
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:text="New Voice"
        android:id="@+id/btn_voice"
        android:layout_alignBottom="@+id/btn_song"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_song"
        android:onClick="addVoice" />
</RelativeLayout>
